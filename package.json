{
  "name": "taku-log-place",
  "productName": "卓ログ置き場",
  "description": "TRPGのセッションログを管理・閲覧するアプリ。",
  "version": "1.3.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently --kill-others \"npm:dev:next\" \"npm:dev:electron\"",
    "dev:next": "cross-env NODE_ENV=development next dev",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:ts && next build",
    "build:ts": "tsc",
    "start": "npm run build && electron .",
    "lint": "next lint",
    "clean": "rimraf dist out .next",
    "release": "npm run clean && npm run build && electron-builder --win --x64"
  },
  "build": {
    "appId": "com.taku-log-place",
    "productName": "卓ログ置き場",
    "asar": false,
    "files": [
      "out/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "zip"
      ],
      "icon": "assets/icons/icon.ico"
    }
  },
  "dependencies": {
    "@radix-ui/react-context-menu": "^2.2.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@tanstack/react-table": "^8.20.6",
    "@types/electron": "^1.4.38",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "date-fns": "^3.6.0",
    "htmlparser2": "^10.0.0",
    "lucide-react": "^0.471.0",
    "next": "^15.1.4",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.1.4",
    "postcss": "^8",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^8.0.2"
  }
}
